<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login">

    <ImageView
        android:id="@+id/imageViewCamera"
        android:layout_width="210dp"
        android:layout_height="196dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/camera"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="74dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <!--        <EditText-->
        <!--            android:id="@+id/edtIdNfc"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_weight="1"-->
        <!--            android:hint="ID NFC" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lbID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="ID NFC :  "/>
            <TextView
                android:id="@+id/tvIdNfc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvGioVao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Gio Vao :  "/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvGioRa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Gio Ra :  "/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvThanhTien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Thanh tien :  "/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/btnHuyBo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huy Bo"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="612dp" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btnXeRa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xe Ra"
            tools:layout_editor_absoluteX="294dp"
            tools:layout_editor_absoluteY="612dp" />

    </LinearLayout>

</LinearLayout>